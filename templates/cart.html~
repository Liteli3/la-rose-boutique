{% block extra_js %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // --- 1. FONCTION UTILITAIRE AJAX ---
        function sendAjaxRequest(url, method, data, successCallback) {
            const csrfToken = document.querySelector('[name=csrfmiddlewaretoken]').value;

            fetch(url, {
                method: method,
                headers: {
                    'Content-Type': 'application/json',
                    'X-CSRFToken': csrfToken
                },
                body: JSON.stringify(data)
            })
            .then(response => {
                // Si la requ√™te a r√©ussi et retourne du JSON
                if (response.ok && response.headers.get('content-type')?.includes('application/json')) {
                    return response.json();
                }
                // Si la requ√™te est OK mais ne retourne pas de JSON (ex: suppression r√©ussie sans retour)
                if (response.ok) {
                    return { success: true };
                }
                // Si la requ√™te a √©chou√©
                throw new Error('Erreur r√©seau ou r√©ponse non OK');
            })
            .then(data => {
                if (data.success) {
                    successCallback(data);
                } else {
                    console.error('Erreur de l\'API:', data.error || 'Erreur inconnue.');
                }
            })
            .catch(error => {
                console.error('Erreur AJAX:', error);
                // Afficher un message d'erreur utilisateur si n√©cessaire
            });
        }

        // --- 2. GESTION DES BOUTONS QUANTIT√â (+ / -) et SUPPRIMER ---

        // Cible le conteneur parent pour l'√©coute des √©v√©nements (D√©l√©gation d'√©v√©nements)
        const cartList = document.getElementById('cart-items-list');

        if (cartList) {
            cartList.addEventListener('click', function(event) {
                const target = event.target;

                // --- Action Supprimer ---
                if (target.classList.contains('remove-btn')) {
                    const key = target.dataset.key;
                    const itemDiv = target.closest('.cart-item');
                    const removeUrl = itemDiv.dataset.removeUrl;

                    if (confirm("√ätes-vous s√ªr de vouloir supprimer cet article ?")) {
                        sendAjaxRequest(removeUrl, 'POST', {}, function(data) {
                            // Supprime l'√©l√©ment du DOM
                            itemDiv.remove();
                            // Recharge la page pour mettre √† jour les totaux et le header (le plus simple)
                            window.location.reload();
                        });
                    }
                }

                // --- Action + / - (Mise √† jour de quantit√©) ---
                if (target.classList.contains('update-qty-btn')) {
                    const action = target.dataset.action;
                    const key = target.dataset.key;
                    const itemDiv = target.closest('.cart-item');
                    const inputElement = itemDiv.querySelector(`.item-quantity-input[data-key="${key}"]`);
                    let newQuantity = parseInt(inputElement.value);

                    if (action === 'increment') {
                        newQuantity += 1;
                    } else if (action === 'decrement' && newQuantity > 1) {
                        newQuantity -= 1;
                    } else if (action === 'decrement' && newQuantity === 1) {
                         // Si on d√©cr√©mente √† 0, demander confirmation pour supprimer
                         target.closest('.item-details').querySelector('.remove-btn').click();
                         return; // Sortir de la fonction
                    }

                    // Met √† jour la valeur de l'input
                    inputElement.value = newQuantity;

                    // Envoie la requ√™te AJAX
                    const updateUrl = itemDiv.dataset.updateUrl;
                    sendAjaxRequest(updateUrl, 'POST', { quantity: newQuantity }, function(data) {
                        if (data.success) {
                            // Mise √† jour visuelle du total de ligne
                            const totalElement = document.getElementById(`total-${key.replace(/[^a-z0-9]/gi, '-')}`);
                            if (totalElement) {
                                totalElement.textContent = `${data.item_total.toFixed(2)} LR`;
                            }
                            // Mise √† jour visuelle du total g√©n√©ral
                            const cartTotalElement = document.getElementById('cart-total-price');
                            if (cartTotalElement) {
                                cartTotalElement.textContent = `${data.cart_total_price.toFixed(2)} LR`;
                            }
                            // Recharger le header pour mettre √† jour le nombre d'articles
                            // Pour simplifier, nous rechargeons la page, mais une solution AJAX serait meilleure
                            // window.location.reload(); // D√©commenter si l'update AJAX n'est pas suffisant
                        }
                    });
                }
            });
        }
    });
</script>
{% endblock extra_js %}
